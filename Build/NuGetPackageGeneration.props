<Project>

  <!-- NuGet package generation -->
  <PropertyGroup>
    <Authors>r12f</Authors>
    <PackageVersion>$(InformationalVersion)</PackageVersion>
    <PackageProjectUrl>https://github.com/r12f/Confidence</PackageProjectUrl>
    <PackageOutputPath>$(OutputRoot)\Packages</PackageOutputPath>

    <!-- Pack symbol files into nuget package as well for debugging purpose. -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

</Project>